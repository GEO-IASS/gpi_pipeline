<?xml version="1.0" encoding="UTF-8"?>
<!-- simplest possible DRF, just makes a simple data cube w/ no calibrations -->
<DRF ReductionType="SpectralScience" name="Create Clean 2D Detector Image">
<dataset InputDir="$(GPI_RAW_DATA_DIR)" OutputDir="$(GPI_DRP_OUTPUT_DIR)">
   <fits filename=""/>
</dataset>
<!-- <module name="Apply Reference Pixel Correction" Save="0" gpitv="0" before_and_after='1' /> -->
<module name="Subtract Dark Background" CalibrationFile="AUTOMATIC" Save="0" gpitv="0" />
<module name="Load Wavelength Calibration" CalibrationFile="AUTOMATIC" />

<module name="Subtract background from 2D raw image" method="calfile" abort_fraction="0.9" fraction="0.7" high_limit="1000" chan_offset_correction="0" Save_stripes="0" Save="0" gpitv="1" />
<module name="Interpolate bad pixels in 2D frame" method="vertical"  Save="1" gpitv="1" CalibrationFile="AUTOMATIC" />

</DRF>
